document.addEventListener('DOMContentLoaded', function() {
    // 햄버거 버튼과 모바일 메뉴 요소를 가져옵니다.
    const hamburger = document.getElementById('hamburger');
    const mobileMenu = document.getElementById('mobile-menu');
    
    // 슬라이드와 메인 텍스트 요소를 가져옵니다.
    const slides = document.querySelectorAll('.slide');
    const mainTextElement = document.getElementById('main-text');

    // 햄버거 버튼 클릭 시 모바일 메뉴의 가시성을 토글합니다.
    hamburger.addEventListener('click', function() {
        if (mobileMenu.style.display === 'none' || mobileMenu.style.display === '') {
            mobileMenu.style.display = 'block'; // 메뉴 보이기
        } else {
            mobileMenu.style.display = 'none'; // 메뉴 숨기기
        }
    });

    // 창 크기가 1400px 이상으로 변경될 때 모바일 메뉴를 숨깁니다.
    window.addEventListener('resize', function() {
        if (window.innerWidth >= 1400) {
            mobileMenu.style.display = 'none'; // 메뉴 숨기기
        }
    });

    // 현재 슬라이드에 따라 메인 텍스트를 업데이트합니다.
    function updateMainText() {
        slides.forEach(slide => {
            // 슬라이드의 투명도가 1일 때 (보이는 슬라이드) 텍스트 업데이트
            if (window.getComputedStyle(slide).opacity == 1) {
                mainTextElement.querySelector('h1').textContent = slide.getAttribute('data-text');
            }
        });
    }

    // 초기 텍스트 업데이트
    updateMainText();

    // 주기적으로 메인 텍스트를 업데이트합니다 (슬라이드 전환과 맞추기 위해 3초마다 체크)
    setInterval(updateMainText, 3000); // 3초마다 실행
});
