/* 화면 너비가 1400px 이하일 때, 네비게이션 메뉴 비활성화, 햄버거 버튼 및 메뉴 팝업 활성화 */
@media (max-width: 1400px) {
	.main-menu, .auth-menu {
		display: none; /* 메인 메뉴와 인증 메뉴 숨기기 */
	}
	.hamburger {
		display: block; /* 햄버거 버튼 표시 */
	}
}

.main-container {
	position: relative; /* 상대적 위치 설정 */
	height: 100vh; /* 전체 뷰포트 높이 */
	margin-top: 190px; /* 헤더 높이만큼 여백 추가 */
	overflow: hidden; /* 컨테이너의 오버플로우 방지 */
}

.slide {
	position: absolute; /* 절대 위치 설정 */
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center;
	animation: slideAnimation 6s infinite; /* 슬라이드 애니메이션 설정 */
	opacity: 0; /* 초기 상태는 숨김 */
	transition: opacity 1s ease-in-out; /* 부드러운 전환 효과 */
}

.slide:nth-child(1) {
	animation-delay: 0s; /* 첫 번째 슬라이드는 즉시 표시 */
}

.slide:nth-child(2) {
	animation-delay: 3s; /* 두 번째 슬라이드는 3초 후에 표시 */
}

@keyframes slideAnimation {
	0% {
		opacity: 0; /* 초기 상태는 숨김 */
	}
	25% {
		opacity: 1; /* 첫 번째 이미지가 보이도록 설정 */
	}
	50% {
		opacity: 0; /* 첫 번째 이미지가 사라지도록 설정 */
	}
	75% {
		opacity: 1; /* 두 번째 이미지가 보이도록 설정 */
	}
	100% {
		opacity: 0; /* 두 번째 이미지가 사라지도록 설정 */
	}
}

.main-text {
	position: relative; /* 오버레이 위에 위치하도록 설정 */
	z-index: 2;
	color: white; /* 흰색 텍스트 색상 */
