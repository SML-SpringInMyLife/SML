	background-position: center; /* 배경 이미지를 중앙에 위치 */
	display: flex; /* Flexbox 레이아웃 사용 */
	justify-content: center; /* 수평 중앙 정렬 */
	align-items: center; /* 수직 중앙 정렬 */
	overflow: hidden; /* 컨테이너의 오버플로우 방지 */
}

.main-container::before {
	content: ""; /* 가상 요소에 내용 없음 */
